<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zhouhy.springboot.mybatis.dao.UserDao">


    <select id="getUserById" resultType="org.zhouhy.springboot.mybatis.entity.User">
         select * from t_users u where u.id=#{id}
    </select>

    <select id="getUsers" resultType="org.zhouhy.springboot.mybatis.entity.User">
        select  * from t_users
    </select>

    <insert id="addUser">
        insert  into  t_users(username,truename) values (#{username},#{truename})
    </insert>

    <delete id="deleteUser">
        delete from t_users where id=#{id}
    </delete>

    <update id="updateUser">
    	update t_users u set u.username=#{username},u.truename=#{truename} where u.id=#{id}
    </update>
</mapper>